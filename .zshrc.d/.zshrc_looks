# 色を使用できるようにする
autoload -Uz colors
colors

# プロンプトの設定
## zsh-git-promptの呼び出し
source ~/.zshrc.d/zsh-git-prompt/zshrc.sh
## 実際の見た目
PROMPT='
path %d
%F{blue}${VIRTUAL_ENV##*/}%f%#%F{cyan}%n%f%(?.%F{white}$%f.%F{yellow}[%?]%f%F{red}$%f) '
RPROMPT='$(git_super_status) '
# virtualenvでpromptを変更しない
export VIRTUAL_ENV_DISABLE_PROMPT=1
# lsに色付けをする
export LS_COLORS="no=00:fi=00:di=38;05;33:ln=38;05;45:or=01;36;41:ex=38;05;213"
# setopt CLICOLOR=true
# zshの補完候補を色付けする
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}
